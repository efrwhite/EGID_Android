<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/HomeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "white"
    tools:context="AddProfiles">

    <!-- Navigation Bar -->
    <RelativeLayout
        android:id="@+id/navBar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/primaryBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            app:tint="#FFFFFF" />

        <!-- Page Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/lato_medium"
            android:text="@string/profiles"
            android:textColor="@color/primary"
            android:textSize="20sp" />
    </RelativeLayout>

    <!-- Child List Title and Add Button -->
    <TextView
        android:id="@+id/childListTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/child"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toStartOf="@+id/addChildLink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/navBar" />

    <TextView
        android:id="@+id/addChildLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:textColor="@color/primary"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/childListTitle"
        app:layout_constraintBottom_toBottomOf="@id/childListTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Child List RecyclerView -->

    <!-- Caregiver List Title and Add Button -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/childrenRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/caregiverListTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/childListTitle"
        tools:itemCount="0" />

    <TextView
        android:id="@+id/caregiverListTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/caregiver"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/childrenRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addCaregiverLink" />

    <TextView
        android:id="@+id/addCaregiverLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:textColor="@color/primary"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/caregiverListTitle"
        app:layout_constraintBottom_toBottomOf="@id/caregiverListTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Caregiver List RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/caregiversRecyclerView"
        android:layout_width="405dp"
        android:layout_height="376dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/caregiverListTitle"
        app:layout_constraintVertical_bias="0.0"
        tools:itemCount="0" />

</androidx.constraintlayout.widget.ConstraintLayout>
